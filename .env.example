# Mailgun Configuration
# API key is found in the "API Security" section of your Mailgun dashboard
MAILGUN_API_KEY=your_mailgun_api_key_here

# For sandbox accounts, use the sandbox domain like: sandbox123abc.mailgun.org
# For verified domains, use your own domain like: mail.yourdomain.com
MAILGUN_DOMAIN=your_mailgun_domain_here

# For sandbox domains, this MUST be postmaster@[your-sandbox-domain]
# For verified domains, this can be any address @yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# Use US endpoint by default. If your account is in EU, switch to:
# MAILGUN_API_ENDPOINT=https://api.eu.mailgun.net

# Session Secret
SESSION_SECRET=change_this_to_a_secure_secret